<body>

    <button class="trigger-btn" onclick="toggleAlert()">Click Me</button>

    <div class="overlay" id="alertOverlay">
        <div class="alert-card">
            <div class="alert-icon">âœ”</div>
            <h2>Looking Good!</h2>
            <p>This is a custom alert built into a single file. No ugly default pop-ups here.</p>
            <button class="close-btn" onclick="toggleAlert()">Awesome</button>
        </div>
    </div>

    <script>
        function toggleAlert() {
            const overlay = document.getElementById('alertOverlay');
            overlay.classList.toggle('active');
        }
    </script>

